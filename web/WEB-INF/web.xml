<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>OrderService</servlet-name>
        <servlet-class>order.OrderService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListController</servlet-name>
        <servlet-class>order.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>order.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdersService</servlet-name>
        <servlet-class>order.OrdersService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrdersController</servlet-name>
        <servlet-class>order.AddOrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTextController</servlet-name>
        <servlet-class>order.SearchTextController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderService</servlet-name>
        <url-pattern>/OrderService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListController</servlet-name>
        <url-pattern>/ListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdersService</servlet-name>
        <url-pattern>/OrdersService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrdersController</servlet-name>
        <url-pattern>/AddOrdersController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTextController</servlet-name>
        <url-pattern>/SearchTextController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
